// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String   // bcrypt
  name          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  beetles       Beetle[]

  @@map("users")
}

model Beetle {
  id            String   @id @default(cuid())
  ownerId       String
  owner         User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  species       String
  lineage       String?
  emergedAt     DateTime?
  notes         String?
  imageUrl      String?
  imageData     String?  @db.LongText  // Base64 編碼的圖片資料
  isPublished   Boolean  @default(false)
  isForSale     Boolean  @default(false)
  price         Int?
  
  // 新增分類欄位
  stage         String   // "larva" | "adult" | "egg" - 成蟲/幼蟲/卵期
  larvaStage    String?  // "L1" | "L2" | "L3" | "unknown" - 幼蟲階段 (僅幼蟲時使用)
  gender        String?  // "male" | "female" - 性別 (僅成蟲時使用)
  category      String   // "rhinoceros" | "stag" - 兜蟲/鍬形蟲
  
  // 成蟲專用欄位
  size          String?  // 尺寸 (mm 或 all size)
  generation    String?  // 累代 (cbf1, cbf2, cbf3, cbf4, cbf5, cbf5+, wd1, wd2, unknown)
  feedingDate   DateTime? // 開吃日期
  
  // 幼蟲專用欄位
  weight        Float?   // 重量 (g)
  records       Json?    // 紀錄檔 (JSON 格式儲存)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([ownerId, isPublished])
  @@index([isPublished, species])
  @@index([species])
  @@index([isPublished, isForSale])
  @@index([stage, category])
  @@index([emergedAt])
  @@index([createdAt])
  @@index([isPublished, stage, category])
  @@map("beetles")
}
